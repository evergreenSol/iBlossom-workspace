<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
		
	<!-- DB 연결용 bean 등록 -->
	<bean class="org.apache.commons.dbcp.BasicDataSource" id="dataSource" destroy-method="close">
	 	<!-- 어느 DB에 접속할 것인지 접속 정보를 key value 세트로 나열 -->
	 	<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
	 	<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
	 	<property name="username" value="IBLOSSOM"/>
	 	<property name="password" value="IBLOSSOM"/>
	</bean>
	
	<bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory">
		<property name="configLocation"  value="classpath:mybatis-config.xml"/> <!-- classpath 가 의미하는 것: resources 폴더를 의미 -->
		<property name="dataSource" ref="dataSource"/> <!-- ref: 객체타입으로 값을 넘겨줌. 그래서 참조(ref) // BasicDataSource 에서 만든 dataSource를 넘겨줌.(순서 중요함)-->
	</bean>
	
	<bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSession">
		<constructor-arg ref="sqlSessionFactory"/>
	</bean>
	
	 <!-- 파일 업로드 기능을 담당하는 도구 등록 -->
	<bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver" id="multipartResolver">
		<!-- defaultEncoding: 업로드 되는 파일에 대한 인코딩을 설정한다. -->  	
	  	<property name="defaultEncoding" value="UTF-8"/>
	  	<!--  
	  		maxUploadSize: 한 번에 업로드할 수 있는 파일의 용량을 지정한다. 
	  		10Mbyte = 1024 * 1024 * 10 자동으로 계산 안되고, 계산된 값을 넣는다. = 대략의 수치 10000000
	  	-->
	  	<property name="maxUploadSize" value="10000000"/>
	  	<!-- maxInMemorySize: 메모리 상의 파일 최대 용량 -->
	  	<property name="maxInMemorySize" value="10000000"/>
	</bean>
	
</beans>
